<%- include("header") %> 

  <section class="first-section" id="biography">
    <div class="container">
      <h1 class = "heading">Edit stories</h1>
      <hr>
      <% for (i = th_list_stories.length - 1; i >= 0; i -= 1) { let story = th_list_stories[i] %> 
      <div class="row list-stories">
        <div class="col-2">
          <a href="/edit/<%= story['id'] %>"><i class="fas fa-edit"></i></a>
          <a href="/delete/<%= story['_id'] %>"><i class="fas fa-trash-alt"></i></a>
        </div>
        <div class="col-10">
          <h2 class="heading"><%= story['title'] %></h2>
          <p class="adjust created-at">Created at : <%= story.created_time.getFullYear()+'-'+(story.created_time.getMonth()+1)+'-'+story.created_time.getDate()+" "+story.created_time.getHours() + ":" + story.created_time.getMinutes() + ":" + story.created_time.getSeconds() %></p>
          <p class="story-content"><%= story.content.slice(0,100) %>...</p>
        </div>
      </div>
      <% } %> 
    </div>
  </section>


<%- include("footer")  %> 